<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/list_color"
    tools:context=".ui.myplots.MyPlotListingActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:background="@drawable/language_border"
            >

            <TextView
                android:id="@+id/dealer_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center|center_horizontal"
                android:minWidth="125dp"
                android:padding="10dp"
                android:fontFamily="@font/oswald_regular"
                android:text=""
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/address_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dealer_title_label"
                android:layout_gravity="left|center_horizontal"
                android:minWidth="125dp"
                android:fontFamily="@font/oswald_regular"
                android:padding="10dp"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/district_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/oswald_regular"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_below="@id/address_label"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/phoneno_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/district_label"
                android:layout_gravity="left|center_horizontal"
                android:minWidth="125dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:text=""
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="normal" />





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>