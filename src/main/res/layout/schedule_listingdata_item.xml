<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.myplots.MyPlotListingActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
               >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dip"
                    android:layout_height="80dip"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/farm_logo"
                   />

                <TextView
                    android:id="@+id/title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/schedule_day"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/sub_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_value"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/after_pronningdays"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sub_title_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_title_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/crop_variety_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_title_value"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/medicine_details"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/crop_variety_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crop_variety_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/crop_season_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crop_variety_value"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/active_ingredients"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/crop_season_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crop_season_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/diseaseInfection_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crop_season_value"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/disease_Infection"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diseaseInfection_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diseaseInfection_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/schedule_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diseaseInfection_value"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text="@string/schedule_date"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schedule_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/schedule_date_label"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="2dip"
                    android:text=""
                    android:textColor="@color/black" />


            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>