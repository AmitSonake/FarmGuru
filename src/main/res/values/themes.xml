<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmGuru" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FarmGuru.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FarmGuru.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FarmGuru.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
       <!-- <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>-->

        <item name="android:activityOpenEnterAnimation">@anim/left_to_right</item>
        <item name="android:activityOpenExitAnimation">@anim/right_to_left</item>
       <!-- <item name="android:activityCloseEnterAnimation">@anim/bounce</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>-->
    </style>
</resources>